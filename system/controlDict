FoamFile
{
    version         2;
    format          ascii;
    class           dictionary;
    location        "system";
    object          controlDict;
}

application     snappyHexMesh;

nTerminalOutputs    10;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         4;

deltaT          7.0e-6;

writeControl    runTime;

writeInterval   7.0e-3;

purgeWrite      2;

writeFormat     ascii;

writePrecision  10;

writeCompression uncompressed;

timeFormat      general;

timePrecision   10;

runTimeModifiable yes;

adjustTimeStep  no;

functions
{
    // Write cell center coordinates and cell volume as fields by running
    // postProcess -time '1:'
    #includeFunc writeCellCentres
    #includeFunc writeCellVolumes
}
